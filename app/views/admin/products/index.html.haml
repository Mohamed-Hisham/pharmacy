.row
  = link_to 'New Product', new_admin_product_path, class: "btn btn-success pull-right"
  .page-header
    %h1 All products


%table{class: "table table-hover"}
  %tr
    %th Product
    %th
    %th

  - @products.each do |product|
    %tr
      %td= link_to product.title, admin_product_path(product)
      %td= link_to 'Edit', edit_admin_product_path(product)
      %td= link_to 'Destroy', [:admin, product], :method => :delete, :data => { :confirm => 'Are you sure?' }

